local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "Pablo OP - Pixel Blade (Fix Total)",
   LoadingTitle = "Carregando Pablo OP...",
   LoadingSubtitle = "Auto Farm Sobrevoa + Kill Aura Rápido + Anti-Bug",
   ConfigurationSaving = {Enabled = false},
   Discord = {Enabled = false},
   KeySystem = false
})

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local Lighting = game:GetService("Lighting")
local Player = Players.LocalPlayer

local remotes = ReplicatedStorage:WaitForChild("remotes")
local useAbility = remotes:FindFirstChild("useAbility") or remotes:WaitForChild("useAbility", 5)
local abilityHit = remotes:FindFirstChild("abilityHit") or remotes:WaitForChild("abilityHit", 5)
local onHit = remotes:FindFirstChild("onHit") or remotes:WaitForChild("onHit", 5)

local Character = Player.Character or Player.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")

local KillAura = false
local AutoFarm = false
local NoClipEnabled = false
local MobESP = false
local Fullbright = false

local AuraRange = 500
local FarmHeightOffset = 25  -- Alto para sobrevoar reto
local EspHighlights = {}
local NoClipConn
local BodyGyro  -- Para manter reto

Player.CharacterAdded:Connect(function(c)
   Character = c
   Humanoid = c:WaitForChild("Humanoid")
   RootPart = c:WaitForChild("HumanoidRootPart")
   if NoClipEnabled then ToggleNoClip(true) end
   if AutoFarm then SetupBodyGyro() end
end)

local function SetupBodyGyro()
   if BodyGyro then BodyGyro:Destroy() end
   BodyGyro = Instance.new("BodyGyro")
   BodyGyro.MaxTorque = Vector3.new(1e5, 1e5, 1e5)
   BodyGyro.P = 1e5
   BodyGyro.Parent = RootPart
end

local function IsValidEnemy(obj)
   if not obj:IsA("Model") then return false end
   local hum = obj:FindFirstChildWhichIsA("Humanoid")
   local hrp = obj:FindFirstChild("HumanoidRootPart")
   if not hum or not hrp or hum.Health <= 0 or hrp.Anchored then return false end
   if Players:GetPlayerFromCharacter(obj) then return false end
   local n = obj.Name:lower()
   if n:find("plant") or n:find("trap") or n:find("spike") or n:find("vine") or n:find("dummy") or n:find("prop") then return false end
   if not (obj:GetAttribute("hadEntrance") or obj:FindFirstChild("Health")) then return false end
   return true
end

local function GetClosestEnemy()
   local closest = nil
   local minDist = AuraRange
   local rootPos = RootPart.Position
   for _, obj in ipairs(Workspace:GetChildren()) do
      if IsValidEnemy(obj) then
         local hrp = obj:FindFirstChild("HumanoidRootPart")
         local dist = (rootPos - hrp.Position).Magnitude
         if dist < minDist then
            minDist = dist
            closest = obj
         end
      end
   end
   return closest
end

local function ToggleNoClip(state)
   NoClipEnabled = state
   if NoClipConn then NoClipConn:Disconnect() end
   if state then
      NoClipConn = RunService.Stepped:Connect(function()
         if Character then
            for _, p in ipairs(Character:GetDescendants()) do
               if p:IsA("BasePart") then p.CanCollide = false end
            end
         end
      end)
   end
end

local function HasEnemies()
   for _, obj in ipairs(Workspace:GetChildren()) do
      if IsValidEnemy(obj) then return true end
   end
   return false
end

local function AdvanceRoom()
   task.wait(0.3)
   local advanced = false
   for _, obj in ipairs(Workspace:GetDescendants()) do
      if obj:IsA("ProximityPrompt") and obj.Enabled then
         local txt = obj.ActionText:lower()
         if txt:find("enter") or txt:find("next") or txt:find("portal") or txt:find("exit") or txt:find("continue") then
            RootPart.CFrame = obj.Parent.CFrame + Vector3.new(0, FarmHeightOffset, 0)
            fireproximityprompt(obj)
            advanced = true
            task.wait(1.5)
            break
         end
      end
   end
   if not advanced then
      for _, v in ipairs(Workspace:GetChildren()) do
         if v:FindFirstChild("ExitZone") then
            RootPart.CFrame = v.ExitZone.CFrame + Vector3.new(0, FarmHeightOffset, 0)
            task.wait(1)
            break
         end
      end
   end
end

-- Loop principal otimizado
local lastHit = 0
local lastScan = 0
RunService.Heartbeat:Connect(function()
   if not Character or not RootPart or Humanoid.Health <= 0 then return end
   
   if AutoFarm then
      ToggleNoClip(true)
      SetupBodyGyro()  -- Manter reto
   end
   
   local now = tick()
   if now - lastScan > 0.05 then  -- Scan rápido mas otimizado
      lastScan = now
      local target = GetClosestEnemy()
      
      if AutoFarm and target then
         local targetHRP = target:FindFirstChild("HumanoidRootPart")
         if targetHRP then
            -- Sobrevoa suave (teleporte controlado)
            local newPos = targetHRP.Position + Vector3.new(0, FarmHeightOffset, 0)
            if (RootPart.Position - newPos).Magnitude > 5 then  -- Só teleporta se distante
               RootPart.CFrame = CFrame.new(newPos, targetHRP.Position) * CFrame.Angles(0, math.rad(180), 0)  -- Olha para baixo, fica reto
            end
         end
      end
      
      if (KillAura or AutoFarm) then
         useAbility:FireServer("tornado")
         for _, obj in ipairs(Workspace:GetChildren()) do
            if IsValidEnemy(obj) then
               local hum = obj:FindFirstChildWhichIsA("Humanoid")
               if hum then
                  abilityHit:FireServer(hum, math.huge, {stun = {dur = 1}}, 0)
                  if onHit then onHit:FireServer(hum, math.huge, {}, 0) end
               end
            end
         end
      end
      
      if AutoFarm and not HasEnemies() then
         task.spawn(AdvanceRoom)
      end
   end
end)

local function ToggleMobESP(state)
   MobESP = state
   for _, h in ipairs(EspHighlights) do h:Destroy() end
   EspHighlights = {}
   if state then
      RunService.Heartbeat:Connect(function()
         if not MobESP then return end
         for _, obj in ipairs(Workspace:GetChildren()) do
            if IsValidEnemy(obj) and not obj:FindFirstChild("ESP") then
               local hl = Instance.new("Highlight")
               hl.Name = "ESP"
               hl.FillTransparency = 0.5
               hl.OutlineColor = Color3.fromRGB(255,0,0)
               hl.Parent = obj
               table.insert(EspHighlights, hl)
            end
         end
      end)
   end
end

local function ToggleFullbright(state)
   Fullbright = state
   if state then
      Lighting.Brightness = 3
      Lighting.ClockTime = 14
      Lighting.FogEnd = 1e9
      Lighting.GlobalShadows = false
   else
      Lighting.Brightness = 1
      Lighting.ClockTime = 0
      Lighting.FogEnd = 100
      Lighting.GlobalShadows = true
   end
end

local FarmTab = Window:CreateTab("Farm")
local VisualTab = Window:CreateTab("Visual")

FarmTab:CreateToggle({Name = "Kill Aura (Rápido)", Callback = function(v) KillAura = v end})
FarmTab:CreateToggle({Name = "Auto Farm (Sobrevoa + Anti-Bug)", Callback = function(v) AutoFarm = v if v then KillAura = true ToggleNoClip(true) end end})

VisualTab:CreateToggle({Name = "Mob ESP", Callback = ToggleMobESP})
VisualTab:CreateToggle({Name = "Fullbright", Callback = ToggleFullbright})

Rayfield:Notify({
   Title = "Pablo OP Fixado!",
   Content = "Auto Farm sobrevoa reto (sem deitado), teleporte suave só se necessário. Kill Aura mais rápido (sem delay). Anti-bug: só avança sem mobs, não teleporta longe. FPS otimizado!",
   Duration = 10
})

print("Pablo OP - Completo! Sobrevoa reto, mata rápido, sem bugs.")
