   Name = "Aura Range",
   Range = {50, 300},
   Increment = 10,
   CurrentValue = 80,
   Callback = function(v)
      AuraRange = v
   end
})

-- Movement Tab
MoveTab:CreateToggle({
   Name = "Fly",
   CurrentValue = false,
   Callback = function(v)
      ToggleFly(v)
